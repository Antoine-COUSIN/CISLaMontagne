/**
     * @Route("/", name="golden_book", methods={"GET","POST"})
     */
    public function new(Request $request): Response
    {
        $goldenBook = new GoldenBook();
        $form = $this->createForm(GoldenBookType::class, $goldenBook);
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $entityManager = $this->getDoctrine()->getManager();
            $entityManager->persist($goldenBook);
            $entityManager->flush();

            return $this->redirectToRoute('golden_book_index', [], Response::HTTP_SEE_OTHER);
        }

        return $this->renderForm('golden_book/new.html.twig', [
            'golden_book' => $goldenBook,
            'form' => $form,
        ]);
    }

    <a href="{{ path('golden_book_new') }}">Create new</a> // admin.html.twig

    <a href="{{ path('golden_book_new') }}">Create new</a> // index.html.twig



    {{ form_row(goldenBook.title) }}
