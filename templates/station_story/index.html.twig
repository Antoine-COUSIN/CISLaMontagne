{% extends 'base.html.twig' %}

{% block title %}StationStory index{% endblock %}

{% block body %}
    <h1>StationStory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for station_story in station_stories %}
            <tr>
                <td>{{ station_story.id }}</td>
                <td>{{ station_story.title }}</td>
                <td>{{ station_story.text|raw }}</td>
                <td>
                    <a href="{{ path('station_story_show', {'id': station_story.id}) }}">show</a>
                    <a href="{{ path('station_story_edit', {'id': station_story.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('station_story_new') }}">Create new</a>
{% endblock %}
