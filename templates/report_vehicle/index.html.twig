{% extends 'baseExtranet.html.twig' %}

{% block title %}ReportVehicle index{% endblock %}

{% block body %}
    <section id="reportVehicleIndex">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Listing des signalements de problèmes véhicules</h2>

                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th>Signalé par</th>
                                <th>Véhicule concerné</th>
                                <th>Description du problème</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for report_vehicle in report_vehicles %}
                            <tr>
                                <td>{{ report_vehicle.User.firstName }} {{ report_vehicle.User.lastName }}</td>
                                <td>{{ report_vehicle.Vehicles.nameVehicle }}</td>
                                <td>{{ report_vehicle.reportVehicle|raw }}</td>
                                <td>
                                    {{ include('report_vehicle/_delete_form.html.twig') }}
                                    <!-- <a href="{{ path('report_vehicle_edit', {'id': report_vehicle.id}) }}">Modifier</a> -->
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
