{% extends 'base.html.twig' %}

{% block title %}Ranks index{% endblock %}

{% block body %}
    <h1>Ranks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameRanks</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rank in ranks %}
            <tr>
                <td>{{ rank.id }}</td>
                <td>{{ rank.nameRanks }}</td>
                <td>
                    <a href="{{ path('ranks_show', {'id': rank.id}) }}">show</a>
                    <a href="{{ path('ranks_edit', {'id': rank.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ranks_new') }}">Create new</a>
{% endblock %}
