{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section id="create-account">
        

        {{ form_start(registrationForm) }}
            <h2>Création d'un compte utilisateur</h2>
            {{ form_row(registrationForm.firstName, { label: 'Prénom' }) }}
            {{ form_row(registrationForm.lastName, { label: 'Nom' }) }}
            {{ form_row(registrationForm.phoneNumber, { label: 'Téléphone' }) }}
            {{ form_row(registrationForm.email, { label: 'Email' }) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
            {{ form_row(registrationForm.agreeTerms, { label: 'Accepter les conditions d\'utilisation' }) }}
            {{ form_row(registrationForm.speciality, { label: 'Spécialitées' }) }}
            {{ form_row(registrationForm.roleCenter, { label: 'Rôles au seins du centre' }) }}

            

            <button type="submit" class="btn-create-account">Créer le compte</button>
        {{ form_end(registrationForm) }}
    </section>
{% endblock %}
