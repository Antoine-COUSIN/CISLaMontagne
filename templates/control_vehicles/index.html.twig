{% extends 'baseExtranet.html.twig' %}

{% block title %}ControlVehicles index{% endblock %}

{% block body %}
    <section id="controlVehiclesIndex">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h2>Contrôles des engins</h2>

                    <div style="overflow: auto !important;">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th>Véhicule</th>
                                    <th>Date du contrôle</th>
                                    <th>Niveau d'huile</th>
                                    <th>Niveau de refroidissement</th>
                                    <th>Niveau de lave glace</th>
                                    <th>Etat des pneus AV</th>
                                    <th>Etat des pneus AR</th>
                                    <th>Etat carrosserie</th>
                                    <th>Etat intérieur</th>
                                    <th>Etat essuies-glaces AV</th>
                                    <th>Etat essuie-glace AR</th>
                                    <th>Eclairage AV</th>
                                    <th>Eclairage AR</th>
                                    <th>Note</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for control_vehicle in control_vehicles %}
                                <tr>
                                    <td>{{ control_vehicle.vehicles.nameVehicle }}</td>
                                    <td>{{ control_vehicle.dateControl ? control_vehicle.dateControl|date('m/Y') : '' }}</td>
                                    <td>{{ control_vehicle.oilLevel }}</td>
                                    <td>{{ control_vehicle.refreshFluidLevel }}</td>
                                    <td>{{ control_vehicle.washingFluidLevel }}</td>
                                    <td>{{ control_vehicle.frontWireShape }}</td>
                                    <td>{{ control_vehicle.backTireShape }}</td>
                                    <td>{{ control_vehicle.bodyShape }}</td>
                                    <td>{{ control_vehicle.indoorShape }}</td>
                                    <td>{{ control_vehicle.frontWiper }}</td>
                                    <td>{{ control_vehicle.backWiper }}</td>
                                    <td>{{ control_vehicle.frontLighting }}</td>
                                    <td>{{ control_vehicle.backLighting }}</td>
                                    <td><!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                            <i class="far fa-eye"></i>
                                        </button>
                                        
                                        <!-- Modal -->
                                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h5 class="modal-title" id="staticBackdropLabel">Note :</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                              </div>
                                              <div class="modal-body">
                                                <p>{{ control_vehicle.annotation }}</p>
                                              </div>
                                              <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Fermer</button>
                                              </div>
                                            </div>
                                          </div>
                                        </div></td>
                                    <!-- <td>{{ control_vehicle.annotation }}</td> -->
                                    <td>
                                        <a href="{{ path('control_vehicles_edit', {'id': control_vehicle.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="15">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <a href="{{ path('control_vehicles_new') }}">Effectuer un contrôle</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
