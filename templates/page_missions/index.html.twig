{% extends 'base.html.twig' %}

{% block title %}Nos Missions{% endblock %}

{% block body %}
<section id="missions">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Nos Missions</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {% for mission in missions %}
                    <p>{{ mission.text|raw }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<section id="engins">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Nos engins</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="enginGlobalContainer">
                    {% for engin in engins %}
                        <article class="enginArticle">
                            <div class="pictureContainer cold-md-6">
                                <img src="{{ asset('img/upload/engins/' ~ engin.enginPicture) }}" alt="">
                            </div>

                            <div class="descriptContainer cold-md-6">
                                <h3>{{ engin.title }}</h3>
                                <p>{{ engin.text|raw }}</p>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
